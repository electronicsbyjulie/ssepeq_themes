<?xml version="1.0" encoding="UTF-8"?>

<style-scheme id="mercury" _name="mercury" version="1.0">
	<author>ssepeq</author>
	<_description>Dark theme resembling the spectrum of a mercury vapor tube.</_description>

<!-- Scribe Theme Generator 1.3 -->

<!-- COLORS -->
	<color name="4047dim" value="#1a0030"/>
	<color name="4358max" value="#4600ff"/>
	<color name="4358brt" value="#4000ee"/>
	<color name="4358med" value="#2a0077"/>
	<color name="4358dim" value="#130030"/>
	<color name="4358vdim" value="#090010"/>
	<color name="4916med" value="#007c9b"/>
	<color name="5461max" value="#6eed00"/>
	<color name="5461brt" value="#59c400"/>
	<color name="5791max" value="#ccac00"/>
	<color name="5791med" value="#aa9000"/>
	<color name="5791dim" value="#2e2400"/>
	<color name="7346max" value="#300010"/>
	<color name="611nm_phosphor" value="#ff3c00"/>
	<color name="tube" value="#708fe0"/>
	<color name="lamp" value="#a4cae0"/>
	<color name="bg" value="#000000"/>
	<color name="tube_dim" value="#0b2329"/>

<!-- Global Settings -->
	<style name="text" foreground="tube" background="4358vdim"/>
	<style name="cursor" foreground="tube"/>
	<style name="current-line" background="4358dim"/>
	<style name="line-numbers" foreground="tube" background="4358med"/>
	<style name="selection" foreground="lamp" background="4358max"/>

<!-- Bracket Matching -->
	<style name="bracket-match" foreground="lamp" background="4916med"/>
	<style name="bracket-mismatch" foreground="611nm_phosphor" background="5791dim"/>
	<style name="search-match" foreground="lamp" background="4916med" bold="true"/>

<!-- Base syntax colors

Languages: plain, python, ruby, xml, html, ada, asp, awk, boo, c,
changelog, chdr, cmake, cpp, csharp, css, d, def, desktop, diff,
docbook, dosbatch, dot, dpatch, dtd, eiffel, erlang, forth, fortran,
gap, gtkrc, haddock, haskell, haskell-literate, idl, ini, java,
javascript, latex, libtool, lua, m4, makefile, msil, nermele, nsis,
objc, ocaml, ocl, octave, pascal, perl, php, pkgconfig, po, prolog,
R, rpmspec, scheme, sh, sql, t2t, tcl, texinfo, vala, vbnet, verilog,
vhdl, xslt, yacc

-->

	<style name="def:string" foreground="5791med"/>
	<style name="def:character" foreground="5791med"/>
	<style name="def:special-char" foreground="5791med"/>
	<style name="def:number" foreground="5791max"/>
	<style name="def:decimal" foreground="5791max"/>
	<style name="def:floating-point" foreground="5791max"/>
	<style name="def:complex" foreground="5791max"/>
	<style name="def:base-n-integer" foreground="5791max"/>
	<style name="def:boolean" foreground="5791max"/>

	<style name="def:builtin" foreground="5461brt"/>
	<style name="def:keyword" foreground="5461brt" bold="true"/>
	<style name="def:function" foreground="5461max" bold="true"/>
	<style name="def:type" foreground="5461brt"/>
	<style name="def:preprocessor" foreground="5461brt"/>
	<style name="def:identifier" foreground="5461max"/>
	<style name="def:variable" foreground="5461max"/>
	<style name="def:operator" foreground="5461brt"/>
	<style name="def:statement" foreground="5461brt" bold="true"/>

	<style name="def:constant" foreground="5461brt"/>
	<style name="def:special-constant" foreground="5461brt"/>
	<style name="def:error" foreground="611nm_phosphor" background="7346max"/>

<!-- Comments -->

	<style name="def:comment" foreground="4358max" bold="true"/>
	<style name="def:shebang" foreground="4358max" bold="true"/>
	<style name="def:doc-comment-element" foreground="4358max" bold="true"/>
	<style name="def:note" foreground="4358max" bold="true"/>

</style-scheme>
